            //Obtenemos la conexión a Facebook
            SNSdataBaseIntegrator snsDB = SNSdataBaseIntegrator.getSessionInstance(request);
            snsDB.getLoginFacebook(request, response);

            //snsDB.updateUserID(request, response);
            if (snsDB.getSessionKey() != null) {
                System.out.println("SKYINDEX: " + snsDB.getSessionKey());
                request.setAttribute("users_AppPermissionDisabled", "1");
            }

            //Cargamos la información del usuario de la BBDD
            snsDB.loadSettings();

            // En caso en que sea una nueva conexión, mostraremos la pantalla de
            // acuerdo legal
            System.out.println("UIDINDEX: " + snsDB.getUserSettings().getUid());
            if (snsDB.getUserSettings().getUid() != null && snsDB.isPermAcep()) {
                String destino = "";
                if (snsDB.getUserSettings().isLegalAccepted()) {
                    destino = "/settingsSNSAngelGuard.jsp?newConection=0&ok=0";
                } else {
                    destino = "/legalAccepted.jsp";
                }
                response.sendRedirect(request.getContextPath() + destino);
            }
